#!/usr/bin/env node

/**
 * Module dependencies.
 */
 
var program = require('commander');
var tryJS = require('./../try');
 
program
  .version('0.0.1')
  .option('-f, --file', '指定某个文件')
  .option('-d, --direct', '指定文件夹')
  .option('-i, --ignore', '忽略文件夹或文件')
  .option('-b, --debug', '启动 debug 模式' )
  .parse(process.argv);

console.log('## start transform...');
var opt = {};
if(program.debug){
	opt.debug = true;
}

tryJS(opt);
console.log('## transform end');